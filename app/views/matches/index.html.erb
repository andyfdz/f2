<p id="notice"><%= notice %></p>

<section>

<h1>Listing Matches</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Object one</th>
      <th>Object two</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.item_one.user.email %></td>
        <td><%= image_tag match.item_one.photo %></td>
        <td><%= match.item_two.user.email %></td>
         <td><%= image_tag match.item_two.photo %></td>

        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</section>
